#include "stdafx.h"
#include "conio.h"
#include "iostream"

using namespace std;


void main()
{
	float area,base,altura;//declaraci√≤n de variable
	cout<<"Ingrese base:";//entrada de datos 1
    cin>>base;//recoge flujo de datos 1
	cout<<"Ingrese altura:";//entrada de datos 2
	cin>>altura;//recoge flujo de datos 2
	area=(base*altura)/2;//formula
	cout<<"El area es: "<<area;//resultado
	getch();//detener la pantalla
	 
}

