//do y while se utiliza generalmente cuando no sabemos se habra de ejecutar
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main(){

float n,i,a,b,c,d,e,f,g,h,nf;

i=0;  // contador 
cout << "Ingrese la catidad de notas que quiere calcular: ";
cin >> n;

do {
  cout << "Ingrese la nota del primer parcial: ";//ingreso de datos 1
  cin >> a;//entrada de datos1
  cout << "Ingrese la nota del segundo parcial: ";//ingreso de datos 2
  cin >> b;//entrada de datos 2
  cout << "Ingrese la nota del tercer parcial: ";//ingreso de datos 3
  cin >> c;//entrada de datos 3
  cout << "Ingrese la nota de practicos: ";//ingreso de datos 4
  cin >> d;//entrada de datos 4
  cout << "Ingrese la nota del examen final: ";//ingreso de dato 5
  cin >> e;//entrada de datos 5
  f=((a+b+c)/3)*0.4;  //datos (1,2,3)/3 por el 40%
  g=(d*0.2);//practicos por el 20%
  h=(e*0.4);//examen final por el 40%
  nf=(f+g+h);//suma de las notas finales
  cout << "La nota final es: "<< nf << endl;//resultado de las notas
  i++;  // Incremento del contador
} while (i<n);
getch();//detiene la pantlla 
}
